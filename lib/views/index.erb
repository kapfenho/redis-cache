<h1>Search customer</h1>
<form action="/search" method="GET">
  <p>First name:  <input type="text" name="fname"></input></p>
  <p>Last name:   <input type="text" name="lname"></input></p>
  <p>ZIP:         <input type="text" name="zip"></input></p>
  <p>Account:     <input type="text" name="acct"></input></p>
  <p>MSISDN:      <input type="text" name="msisdn"></input></p>
  <input type="submit" name="Search" />
</form>
<h2>Customers</h2>
<ul>
      <% @customers.each do || %>
        <li><a href="/post/<%= post.id %>"><%= post.title %></a></li>
      <% end %>
  <br />
</ul>

